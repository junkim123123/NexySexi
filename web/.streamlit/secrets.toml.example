# NexSupply Secrets Configuration Example
# 
# IMPORTANT SECURITY NOTES:
# 1. This file is for reference only - DO NOT commit actual secrets
# 2. Copy this file to .streamlit/secrets.toml and fill in your actual values
# 3. .streamlit/secrets.toml is already in .gitignore
# 4. For production, use environment variables or a secret management service

# Gemini API Key (Required)
GEMINI_API_KEY = "your-gemini-api-key-here"

# SMTP Configuration (for email service)
SMTP_SERVER = "smtp.gmail.com"
SMTP_PORT = "587"
SMTP_USERNAME = "outreach@nexsupply.net"
SMTP_PASSWORD = "your-app-password-here"
SMTP_FROM_EMAIL = "outreach@nexsupply.net"

# Consultation Email (can be overridden)
CONSULTATION_EMAIL = "outreach@nexsupply.net"

# Database URL (optional, for future use)
# DATABASE_URL = "sqlite:///nexsupply_logs.db"

